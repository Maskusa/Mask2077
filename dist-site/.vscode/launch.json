{
  // Launch configuration to run the static PowerShell server with F5
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Serve Mask2077",
      "type": "PowerShell",
      "request": "launch",
      "script": "${workspaceFolder}/serve.ps1",
      "args": [
        "-Hostname",
        "localhost",
        "-Port",
        "4173"
      ],
      "cwd": "${workspaceFolder}",
      "internalConsoleOptions": "neverOpen",
      "serverReadyAction": {
        "pattern": "READY\\s+(http://\\S+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    }
  ]
}
