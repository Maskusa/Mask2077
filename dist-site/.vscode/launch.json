// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Serve Mask2077 (PowerShell)",
      "type": "process",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "./serve.ps1",
        "-Hostname", "localhost",
        "-Port", "4173"
      ],
      "options": {
        "cwd": "${workspaceFolder}/dist-site"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "mask2077-serve",
        "pattern": { "regexp": ".*" },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*$",
          "endsPattern": "^READY .*"
        }
      }
    }
  ]
}
